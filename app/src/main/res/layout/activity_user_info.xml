<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="www.ragnsells.ee.ragnsells.MyUserActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_myuser"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text=""/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edit_user_item_bg">
                />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nimi"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kontrolli võrguühendust"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edit_user_item_bg"
                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Telefon"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="right"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kontrolli võrguühendust"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edit_user_item_bg">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Roll"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kontrolli võrguühendust"
                    android:layout_gravity="right"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_user_item_bg"
                android:layout_margin="5dp">
                />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Viimati uuendatud:"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:id="@+id/tv_user_update_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kontrolli võrguühendust"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_user_item_bg"
                android:layout_margin="5dp">
                />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kasutaja loodi:"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:id="@+id/tv_user_created"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kontrolli võrguühendust"
                    android:layout_gravity="right"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

            </LinearLayout>
            <!--<Button
                android:id="@+id/btn_call_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Helista"/> -->
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_call_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/btnhover"
                fancy:fb_iconPosition="left"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"

                fancy:fb_text="HELISTA KASUTAJALE"
                fancy:fb_textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>